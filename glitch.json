{
  "install": "npm install",
  "start": "node server.js",
  "watch": {
    "ignore": [
      "\\.git",
      "node_modules",
      "public",
      "*.log",
      "*.tmp"
    ]
  },
  "throttle": 1000,
  "env": {
    "NODE_ENV": "production",
    "HOST": "0.0.0.0",
    "PORT": "3000",
    "QUANTUM_SECURITY_ENABLED": "true",
    "GLITCH_STEALTH_MODE": "true",
    "CHRONOS_AI_ENABLED": "true",
    "QUANTUM_RESISTANCE_LEVEL": "99.97"
  },
  "engines": {
    "node": "20.x"
  }
}